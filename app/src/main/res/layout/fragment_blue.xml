        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluefrag_title_tv" />

    <TextView
        android:id="@+id/date"
        android:layout_width="349dp"
