<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/PostsListFragment">

    <fragment
        android:id="@+id/PostsListFragment"
        android:name="com.example.adnroidProject.PostsListFragment"
        android:label="posts List"
        tools:layout="@layout/fragment_posts_list">
        <action
            android:id="@+id/action_PostsListFragment_to_blueFragment"
            app:destination="@id/blueFragment" />
    </fragment>
    <fragment
        android:id="@+id/blueFragment"
        android:name="com.example.adnroidProject.BlueFragment"
        android:label="fragment_blue"
        tools:layout="@layout/fragment_blue" >
        <argument
            android:name="blueTitle"
            app:argType="string" />
        <argument
            android:name="lastTimeUserPosted"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.adnroidProject.AddPostFragment"
        android:label="Add New Post"
        tools:layout="@layout/fragment_add_post" />
    <action android:id="@+id/action_global_addPostFragment" app:destination="@id/addPostFragment" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.adnroidProject.AboutFragment"
        android:label="Dogs Images"
        tools:layout="@layout/fragment_about" />
</navigation>